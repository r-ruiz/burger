<header class="mb-5 shadow p-3 mb-5 rounded">
    <h1 class="m-0 text-white"><i class="fas fa-utensils"></i>  - EAT DA BURGER!</h1>
    <br />
</header>
<div class="container">
    <div class="card shadow-lg p-3 rcorners">
        <div class="row">
            <div class="col-1"></div>
            <div class="col border rcorners">
                <h4>Order Up!</h4>
                <ul>
                    {{#each burgers}} {{#unless this.devoured}}
                    <li>
                        {{this.id}}. {{this.burger_name}}
                        <br />
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="false">
                            <button class="btn btn-primary" type="submit">Eat Me</button>
                        </form>
                        <br />

                    </li>
                    {{/unless}} {{/each}}
                </ul>
            </div>
            <div class="col-1"></div>
            <div class="col border rcorners">
                <div id='devoured'>
                    <h4>Burgers Devoured! </h4>
                    <ul>
                        {{#each burgers}} {{#if this.devoured}}
                        <li>
                            - {{this.burger_name}}
                        </li>
                        {{/if}} {{/each}}
                    </ul>
                </div>
            </div>
            <div class="col-1"></div>
        </div>
        <div class="row pt-3">
            <div class="col-4"></div>
            <div class="col-4">
                <div id='add'>
                    <h4>What Do Ya Want?</h4>
                    <form class="create-update-form" action="/" method="POST">
                        <div class="form-group">
                            <label for="dab">Burger:</label>
                            <input type="text" name="burger_name">
                        </div>
                        <button class="btn btn-primary" type="submit">Order!</button>
                    </form>
                </div>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
</div>